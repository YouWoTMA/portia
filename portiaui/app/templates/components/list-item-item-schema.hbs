{{#list-item-relation-manager value=(mut item.schema.content) choices=item.sample.spider.project.schemas selecting=(mut selecting) onChange=(action 'changeSchema') create=(action 'addSchema') as |options|}}
    {{#if (eq options.section 'choices')}}
        Select an existing schema
    {{else if (eq options.section 'choice')}}
        {{list-item-icon class="icon" icon='schema'}}{{options.choice.name}}
    {{else if (eq options.section 'rename')}}
        Rename the selected schema
    {{else if (eq options.section 'add')}}
        Create a new schema
    {{/if}}
{{/list-item-relation-manager}}
